<?xml version="1.0" encoding="utf-8" ?>
<Config>
    <Plasma>
        <!-- Name of the game on the server browser -->
        <GameName>Game Name</GameName>
        <!-- (UDP) Game Port (must be forwarded by the firewall, and docker-compose.yml): default: 11900 -->
        <Port>11901</Port>
        <!-- Username (not Persona!) of the hosting account -->
        <Username>USERNAME</Username>
        <Password>PASSWORD</Password>
        <Adapter />
    </Plasma>
    <Network>
        <!-- Max. number of players (max. 16)-->
        <MaxSlots>16</MaxSlots>
        <MaxAllowedConnectionQuality>2</MaxAllowedConnectionQuality>
        <!-- (hidden option) Don't connect to EA Nation (for LAN-only, default: false): true/false -->
        <UseLAN>false</UseLAN>
        <!-- (hidden option) Define frame rate (default: 25, max: 30) -->
        <LockFrameRate>25</LockFrameRate>
    </Network>
    <Debug>
        <!-- (hidden option) Write fps logs: true/false -->
        <LogFPS>false</LogFPS>
    </Debug>
    <Session>
        <!-- Difficulty - 0: Casual, 1: Heroic, 2: Legendary -->
        <Difficulty>1</Difficulty>
        <!-- HeroAssignment - 0: Highest Points, 1: Random, 2: Never -->
        <HeroAssignment>0</HeroAssignment>
        <!-- Conquest Victory Points -->
        <ConquestVP>1000</ConquestVP>
        <!-- CTR (Capture the Ring/Flag) Victory Points -->
        <CTFVP>5</CTFVP>
        <!-- Team Deathmatch Victory Points -->
        <TDMVP>50</TDMVP>
        <!-- TimeLimit: x = 0 (deactivated), X > 0 -> X minutes -->
        <TimeLimit>15</TimeLimit>
        <!-- Team Balance: true/false -->
        <AutoBalance>true</AutoBalance>
        <!-- Enable AI: true/false -->
        <UseAI>true</UseAI>
        <!-- (hidden option) Looping levels infinitely: true/false -->
        <LoopLevels>true</LoopLevels>
        <!-- (hidden option) Min. player count to start games: default: 2 -->
        <MinPlayerCount>2</MinPlayerCount>
    </Session>
    <Levels>
